    <!-- 前一天用汽信息 -->
    <select id="steamDayData" resultType="com.enn.vo.energy.passage.vo.SteamVo">
        SELECT
            t1.id AS id,
            t1.meter_no AS meterNo,
            IFNULL(t1.use_quantity, 0) AS useQuantity,
            IFNULL(t1.quantity, 0) AS quantity,
            t1.fees AS fees
        FROM
            steam_meter_reading_day t1
        WHERE
            t1.read_time = DATE_FORMAT( DATE_SUB( NOW( ), INTERVAL 1 DAY ), '%Y-%m-%d' )
            AND t1.metric = 'EMS.FsIntLP'
    </select>

    <!-- 天(条件)用汽信息 -->
    <select id="steamDayDataByCondition" resultType="com.enn.vo.energy.passage.vo.SteamVo">
        SELECT
            t1.id AS id,
            t1.meter_no AS meterNo,
            IFNULL(t1.use_quantity, 0) AS useQuantity,
            IFNULL(t1.quantity, 0) AS quantity,
            t1.fees AS fees
        FROM
            steam_meter_reading_day t1
        WHERE
            t1.metric = 'EMS.FsIntLP'
            <if test="meterNo != null and meterNo != ''">
                AND t1.meter_no = #{meterNo}
            </if>
            <if test="startTime != null and startTime !=''" >
                AND
                t1.read_time &gt;= #{startTime}
            </if>
            <if test="endTime != null and endTime !=''" >
                AND t1.read_time &lt;= #{endTime}
            </if>
    </select>

    <update id="updateBatch" parameterType="java.util.List">
        update steam_meter_reading_day
        <trim prefix="set" suffixOverrides=",">

            <trim prefix="fees =case" suffix="end,">
                <foreach collection="steamVoList" item="cus">
                    <if test="cus.fees!=null and cus.fees != ''">
                        when id=#{cus.id} then #{cus.fees}
                    </if>
                </foreach>
            </trim>
        </trim>
        <where>
            <foreach collection="steamVoList" separator="or" item="cus">
                id = #{cus.id}
            </foreach>
        </where>
    </update>

